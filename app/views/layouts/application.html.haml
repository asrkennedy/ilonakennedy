!!!
%html
  %head
    %title Ilona Kennedy
    %meta{ :name=>"viewport", :content=>"initial-scale=1" }
    = stylesheet_link_tag    "application", :media => "all"
    %link{:href => "http://fonts.googleapis.com/css?family=Poiret+One", :rel => "stylesheet", :type => "text/css"}
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %nav.cf
      %ul
        %li
          = link_to "Current Work", "/recent-works", :class=> cp(works_path)
        %li
          = link_to "Retrospective Work", "/past-works", :class=> cp(categories_path)
        %li
          = link_to "About the Artist", "/bio", :class=> cp(bio_path)
        %li
          = link_to "Contact", "/contact", :class=> cp(contact_path)
      = link_to "Ilona Kennedy", "/", :class=> "title"
      .title.down &dtri;
    = yield

