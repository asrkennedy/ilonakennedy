<div class="recent-works">
<% @works.each do |work| %>
  <% if work.is_recent %>
    <div class="work_row">
      <div class="work_image_wrapper">
        <%= image_tag work.works_image.url, :class=>"work_image" %>
      </div>
      <div class="info_bar">
        <%= link_to work.name, work %>
        <%= image_tag "up-arrow-icon.png", :class=>"up_arrow" %>
        <%= image_tag "down-arrow-icon.png", :class=>"down_arrow" %>
      </div>
    </div>
  <% end %>
<% end %>

<ul id="works">
  <% for work in @works %>
    <% content_tag_for :li, work do %>
      <span class="handle">[drag]</span>
      <%= link_to h(work.name), work %>
    <% end %>
  <% end %>
</ul>
<%= sortable_element("works", :url => sort_works_path, :handle => "handle") %>
</div>

